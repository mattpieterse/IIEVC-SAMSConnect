<Application
    x:Class = "SAMS.Connect.App"
    xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui = "http://schemas.lepo.co/wpfui/2022/xaml"
    ShutdownMode = "OnMainWindowClose"
    Startup = "OnStartup">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source = "Assets/Styles/Variables/Colors.xaml" />
                <ResourceDictionary
                    Source = "Assets/Styles/Components/Buttons/Accent.xaml" />
                <ResourceDictionary
                    Source = "Assets/Styles/Components/Buttons/Standard.xaml" />
                <ResourceDictionary
                    Source = "Assets/Styles/Components/ListView/Container.xaml" />
                <ResourceDictionary
                    Source = "Assets/Styles/Components/ListView/Item.xaml" />
                <ResourceDictionary
                    Source = "Assets/Styles/Components/CheckBox/Standard.xaml" />
                <ResourceDictionary
                    Source = "Assets/Styles/Components/TextBox/Standard.xaml" />
                <ResourceDictionary
                    Source = "Assets/Styles/Components/TextBox/RichText.xaml" />
                <ResourceDictionary
                    Source = "Assets/Styles/Components/Label/Error.xaml" />
                <ResourceDictionary
                    Source = "Assets/Styles/Components/ComboBox/Standard.xaml" />

                <!-- WPF FluentUI -->

                <ui:ThemesDictionary
                    Theme = "Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
