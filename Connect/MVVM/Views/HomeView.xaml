<Page
    x:Class = "SAMS.Connect.MVVM.Views.HomeView"
    xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewmodels = "clr-namespace:SAMS.Connect.MVVM.ViewModels"
    xmlns:ui = "http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable = "d"
    ui:Design.Background = "{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground = "{DynamicResource TextFillColorPrimaryBrush}"
    Foreground = "{DynamicResource TextFillColorPrimaryBrush}"
    d:DataContext = "{d:DesignInstance viewmodels:HomeViewModel}"
    d:DesignHeight = "800"
    d:DesignWidth = "1252">

    <Grid>
        <Grid
            Margin = "12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width = "*" />
                <ColumnDefinition
                    Width = "*" />
            </Grid.ColumnDefinitions>

            <Grid
                Grid.Column = "0"
                Margin = "32">
                <Image
                    HorizontalAlignment = "Right"
                    Source = "../../Assets/Icon/appicon.ico"
                    Height = "200" />
            </Grid>
            <Grid
                Grid.Column = "1"
                Margin = "32">
                <StackPanel
                    VerticalAlignment = "Center"
                    HorizontalAlignment = "Left"
                    Orientation = "Vertical">
                    <ui:Button
                        Content = "Create an Issue Report"
                        Command = "{Binding NavigateToIssueViewCommand}"
                        Width = "200" />

                    <Separator
                        Margin = "0,6"
                        Width = "0" />

                    <ui:Button
                        Content = "Events &amp; Announcements"
                        Command = "{Binding NavigateToEventViewCommand}"
                        Width = "200" />

                    <Separator
                        Margin = "0,6"
                        Width = "0" />

                    <ui:Button
                        Content = "Service Request Status"
                        IsEnabled = "False"
                        Width = "200" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
