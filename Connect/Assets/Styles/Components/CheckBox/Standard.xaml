<ResourceDictionary
    xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml" >
    <Style
        TargetType = "CheckBox" >

        <!-- OVERRIDE -->

        <Setter
            Property = "OverridesDefaultStyle"
            Value = "True" />

        <!-- ATTRIBUTES -->

        <Setter
            Property = "SnapsToDevicePixels"
            Value = "True" />

        <!-- TEMPLATE -->

        <Setter
            Property = "Template" >
            <Setter.Value>
                <ControlTemplate
                    TargetType = "{x:Type CheckBox}" >
                    <BulletDecorator
                        Background = "Transparent" >
                        <BulletDecorator.Bullet>
                            <Border
                                Name = "Component"
                                Padding = "4"
                                Background = "#F2F2F2"
                                BorderBrush = "#626262"
                                BorderThickness = "1"
                                CornerRadius = "3"
                                SnapsToDevicePixels = "True" >
                                <Grid
                                    HorizontalAlignment = "Center"
                                    VerticalAlignment = "Center" >
                                    <Path
                                        Name = "Selector"
                                        Width = "5"
                                        Height = "5"
                                        SnapsToDevicePixels = "False"
                                        Stroke = "#FDFDFD"
                                        StrokeThickness = "1"
                                        Data = "M 0 0 L 5 5 M 0 5 L 5 0" />
                                </Grid>
                            </Border>
                        </BulletDecorator.Bullet>
                        <ContentPresenter
                            SnapsToDevicePixels = "{TemplateBinding SnapsToDevicePixels}"
                            HorizontalAlignment = "{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment = "{TemplateBinding VerticalContentAlignment}" />
                    </BulletDecorator>

                    <!-- TEMPLATE TRIGGERS -->

                    <ControlTemplate.Triggers>
                        <Trigger
                            Property = "IsChecked"
                            Value = "False" >
                            <Setter
                                TargetName = "Selector"
                                Property = "Visibility"
                                Value = "Hidden" />

                        </Trigger>
                        <Trigger
                            Property = "IsChecked"
                            Value = "True" >
                            <Setter
                                TargetName = "Selector"
                                Property = "Visibility"
                                Value = "Visible" />
                            <Setter
                                TargetName = "Component"
                                Property = "Background"
                                Value = "#005EB7" />
                            <Setter
                                TargetName = "Component"
                                Property = "BorderBrush"
                                Value = "#005EB7" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>