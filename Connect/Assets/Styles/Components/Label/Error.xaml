<ResourceDictionary
    xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml" >
    <Style
        x:Key = "LabError"
        TargetType = "Label" >

        <!-- TYPOGRAPHY -->

        <Setter
            Property = "FontSize"
            Value = "10" />

        <Setter
            Property = "Foreground"
            Value = "{StaticResource Error}" />

        <!-- ATTRIBUTES -->

        <Setter
            Property = "Padding"
            Value = "0" />
    </Style>
</ResourceDictionary>